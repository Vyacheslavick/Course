<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="187dp"
        android:layout_height="190dp"
        android:background="@color/colorPrimary"
        app:srcCompat="@android:drawable/stat_notify_error"
        android:layout_margin="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageView"
        android:layout_margin="14dp"
        android:textSize="24dp"
        android:text="Name "
        android:id="@+id/name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginLeft="14dp"
        android:textSize="24dp"
        android:layout_toRightOf="@+id/imageView"
        android:text="Price"
        android:id="@+id/price"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price"
        android:layout_marginLeft="14dp"
        android:textSize="24dp"
        android:layout_toRightOf="@+id/imageView"
        android:text="Material"
        android:id="@+id/material"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/material"
        android:layout_marginLeft="14dp"
        android:textSize="24dp"
        android:layout_toRightOf="@+id/imageView"
        android:text="Из раздела:"
        android:id="@+id/from_type"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/from_type"
        android:layout_marginLeft="14dp"
        android:textSize="24dp"
        android:layout_toRightOf="@+id/imageView"
        android:text="Type"
        android:id="@+id/type"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/type"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="14dp"
        android:textSize="24dp"
        android:text="Поставщик:"
        android:id="@+id/prov"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/type"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="14dp"
        android:textSize="24dp"
        android:layout_toRightOf="@+id/prov"
        android:text="Provider:"
        android:id="@+id/provider"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/provider"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="14dp"
        android:textSize="24dp"
        android:text="Продано в кол-ве:"
        android:paddingBottom="8dp"
        android:id="@+id/sells"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/provider"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="14dp"
        android:textSize="24dp"
        android:layout_toRightOf="@+id/sells"
        android:text="N pcs"
        android:paddingBottom="8dp"
        android:id="@+id/sold"/>

</RelativeLayout>